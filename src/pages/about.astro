---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const [{ data }] = await getCollection('profile');
---

<Layout>
	<div class="mx-auto px-4 py-10">
		<div class="hero rounded-xl shadow-lg">
			<div class="hero-content flex-col lg:flex-row">
				<div class="avatar lg:mr-8">
					<div class="w-36 rounded-full ring ring-primary ring-offset-2 ring-offset-base-100">
						<img
							src=`${import.meta.env.BASE_URL}/${data.avatar_url ?? 'https://picsum.photos/200'}`
							alt={data.name}
						/>
					</div>
				</div>
				<div class="max-lg:text-center">
					<h1 class="text-4xl font-bold">{data.name}</h1>
					<p class="badge py-2 text-sm badge-secondary">{data.profession}</p>
					<p class="max-w-xl py-4">{data.description}</p>
					<div class="flex justify-end gap-4">
						<a
							target="_blank"
							rel="noopener noreferrer"
							href=`mailto:${data.social.email}`
							class="btn btn-sm btn-primary">Email</a
						>
						<a
							target="_blank"
							rel="noopener noreferrer"
							href={data.social.whatsapp}
							class="btn btn-sm btn-accent">Whatsapp</a
						>
						<a
							target="_blank"
							rel="noopener noreferrer"
							href={data.social.github}
							class="btn btn-sm btn-neutral">GitHub</a
						>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
